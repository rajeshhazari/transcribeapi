version: "3.3"

services:
  transcribeapp-dev:
    env_file: 
       - ./scripts/env.conf
    environment:
        POSTGRES_USER: ${POSTGRES_USER}
        POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
        POSTGRES_DB: ${POSTGRES_DB}
        PG_ENV: DEV
    image: postgres:12-alpine
    container_name: "${POSTGRES_DB}_${PG_ENV}-db"
    restart: always
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U postgres" ]
      interval: 5s
      timeout: 5s
      retries: 5
    volumes:
        - ./scripts/alias.sh:/home/alias.sh
        - ./scripts/my-postgres.conf:/etc/postgresql/postgresql.conf
        - ./scripts/sql/:/docker-entrypoint-initdb.d/
        - ./pg-data:/var/lib/postgresql/data
        - /etc/localtime:/etc/localtime:ro
    command: postgres -c config_file=/etc/postgresql/postgresql.conf
    ports:
        - 6432:5432
    network: transcribedb_dbnet
